<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="400dp"
              android:padding="20dp">

    <TextView
        android:id="@+id/dialog_exercise_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <VideoView
        android:id="@+id/dialog_exercise_type_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/dialog_exercise_type_youtube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
            android:id="@+id/dialog_exercise_type_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"/>

    </ScrollView>

    <android.support.v7.widget.ButtonBarLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_exercise_type_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="Back"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/dialog_exercise_type_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="Start"
            style="?android:attr/buttonBarButtonStyle"/>

    </android.support.v7.widget.ButtonBarLayout>

</LinearLayout>