<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.berkeley.capstoneproject.capstoneprojectandroid.activities.MainActivity">

    <Button
        android:id="@+id/button_http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Http"/>

    <Button
        android:id="@+id/button_bluetooth_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_http"
        android:text="Scan"/>

    <ListView
        android:id="@+id/list_bluetooth_devices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_bluetooth_scan">

    </ListView>

</RelativeLayout>
